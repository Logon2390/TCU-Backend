generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  document  String   @unique
  gender    String
  birthday  DateTime?
  lastRecord DateTime?

  Record Record[]
}

model Admin {
  id         Int      @id @default(autoincrement())
  name       String
  email      String   @unique
  password   String
  role       String
  accessCode Int
}

model Module {
  id      Int      @id @default(autoincrement())
  name    String   @unique
  records Record[]
}

model Record {
  id       Int      @id @default(autoincrement())
  userId   Int
  date     DateTime
  moduleId Int

  user   User   @relation(fields: [userId], references: [id])
  module Module @relation(fields: [moduleId], references: [id])
}
